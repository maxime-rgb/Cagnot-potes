{% extends 'base.html.twig' %}

{% block title %}Participants{% endblock %}

{% block body %}
    <h1>Participants</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ participant.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ participant.name }}</td>
            </tr>
            <tr>
                <th>Mail_participant</th>
                <td>{{ participant.mailParticipant }}</td>
            </tr>
            <tr>
                <th>Campaign_id</th>
                <td>{{ participant.campaignId }}</td>
            </tr>
            <tr>
                <th>Is_anonymous</th>
                <td>{{ participant.isAnonymous ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('participants_index') }}">back to list</a>

    <a href="{{ path('participants_edit', {'id': participant.id}) }}">edit</a>

    {{ include('participants/_delete_form.html.twig') }}
{% endblock %}
