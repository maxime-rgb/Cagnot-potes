{% extends 'base.html.twig' %}

{% block title %}Campaign index{% endblock %}

{% block body %}
    <h1>Liste des campagnes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Contenu</th>
                <th>Goal</th>
                <th>Cr√©ateur</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for campaign in campaigns %}
            <tr>
                <td>{{ campaign.id }}</td>
                <td>{{ campaign.name }}</td>
                <td>{{ campaign.content }}</td>
                <td>{{ campaign.goal }}</td>
                <td>{{ campaign.username }}</td>
                <td>{{ campaign.email }}</td>
                <td>
                    <a href="{{ path('campaign_show', {'id': campaign.id}) }}">show</a>
                    <a href="{{ path('campaign_edit', {'id': campaign.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('campaign_new') }}">Create new</a>
{% endblock %}
